{
  "name": "code-journal-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "ts-node-esm server.ts",
    "dev": "nodemon server.ts",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.10.1",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node-esm",
      "js": "ts-node-esm"
    }
  }
}
